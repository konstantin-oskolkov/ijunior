class Program
   {
      static void Main(string[] args)
      {
         int constanta = 2;
         int result = constanta;
         int count = 1;
         int minValue = 1;
         int maxValue = 101;
         bool isWouk = true;

         Random random = new Random();
         int number = random.Next(minValue, maxValue);

         while (isWouk)
         {
            result = result * constanta;

            if (number < result)
            {
               isWouk = false;
            }

            count++;
         }

         Console.WriteLine($" для заданного числа {number}\n {constanta} в степени {count}\n будет: {result}");
      }
  }
