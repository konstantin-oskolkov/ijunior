      static void Main(string[] args)
      {
         string[] profession = new string[] { "Пупкин", "Ухов", "Блинков", "Сомова" };
         string[] names = new string[] { "мойщик", "охрана", "секретарь", "дилектол" };

         WorkingWithDossier(names, profession);
      }

      static void WorkingWithDossier(string[] names, string[] profession)
      {
         bool endWorkWithUserMenu = true;
         while (endWorkWithUserMenu)
         {
            string selectedMenu = PrintUserMenu();

            switch (selectedMenu)
            {
               case "1":
                  PrintDossier(names, profession);
                  break;

               case "2":
                  FindDossier(names, profession);
                  break;

               case "3":
                  RemoveDossier(ref names, ref profession);
                  break;

               case "4":
                  names = AddDossier("Введите фамилию сотрудника: ", names);
                  profession = AddDossier("Введите профессию сотрудника: ", profession);
                  break;

               case "5":
                  endWorkWithUserMenu = false;
                  break;

               default:
                  Console.WriteLine(" Введена не корректная команда!");
                  break;
            }
            Console.WriteLine(" для продолжения нажмите клавишу");
            Console.ReadKey();
            Console.Clear();
         }
      }

      static string PrintUserMenu()
      {
         Console.WriteLine(" Работа с досье сотрудников:");
         Console.Write(" Выберите действие:\n 1 - Вывести список всех сотрудников" +
          "\n 2 - Найти сотрудника по фамилии\n 3 - Удолить досье сотрудника" +
          "\n 4 - Добавить досье сотрудника\n 5 - Выход из программы\n \n №: ");
         string selectedMenu = Console.ReadLine();
         return selectedMenu;
      }

      static void PrintDossier(string[] names, string[] profession)
      {
         int numberOfDossier = 0;
         string allDossier = "";

         Console.Write(" Список всех сотрудников: ");

         for (int i = 0; i < names.Length; i++)
         {
            allDossier += ($"{++numberOfDossier}: {names[i]} - {profession[i]}; ");
         }

         Console.WriteLine(allDossier);
      }

      static void FindDossier(string[] names, string[] profession)
      {
         string worker;
         bool workerIsFind = false;

         Console.Write(" Введите фамилию для поиска досье: ");
         worker = Console.ReadLine();

         for (int i = 0; i < names.Length; i++)
         {
            if (worker.ToLower() == names[i].ToLower())
            {
               Console.WriteLine(" Сотрудник - " + names[i] + " - " + profession[i]);
               workerIsFind = true;
            }
         }
         if (workerIsFind == false)
         {
            Console.WriteLine(" Нет такого сотрудника");
         }
      }

      static void RemoveDossier(ref string[] names, ref string[] profession)
      {
         PrintDossier(names, profession);
         Console.Write(" Введите фамилию работника для удаления: ");
         string worker = Console.ReadLine();

         string[] tempProfession = new string[profession.Length - 1];
         string[] tempEmployee = new string[names.Length - 1];

         for (int i = 0; i < names.Length; i++)
         {
            if (worker.ToLower() == names[i].ToLower())
            {

               Console.WriteLine(" Сотрудник - " + names[i] + " - удален");

               for (int j = 0; j < i; j++)
               {
                  tempEmployee[j] = names[j];
                  tempProfession[j] = profession[j];
               }
               for (int j = i + 1; j < names.Length; j++)
               {
                  tempEmployee[j - 1] = names[j];
                  tempProfession[j - 1] = profession[j];
               }
               names = tempEmployee;
               profession = tempProfession;
            }
         }
      }

      static string[] AddDossier(string text, string[] employee)
      {
         string[] tempEmployee = new string[employee.Length + 1];
         Console.Write(text);

         for (int i = employee.Length; i < tempEmployee.Length; i++)
         {
            tempEmployee[i] = Console.ReadLine();
         }

         for (int i = 0; i < employee.Length; i++)
         {
            tempEmployee[i] = employee[i];
         }
         employee = tempEmployee;

         return employee;
      }
