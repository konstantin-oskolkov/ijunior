class Program
   {
      private static void Main(string[] args)
      {
         Player player1 = new Player(9, 4);
         Renderer renderer = new Renderer();
         renderer.DrawPlayer(player1.X, player1.Y);         
      }
   }

   class Player
   {
      private int _x;
      private int _y;

      public int X
      {
         get 
         {
            return _x; 
         }
         private set 
         {
            _x = value; 
         }
      }

      public int Y
      {
         get
         {
            return _y;
         }
         private set
         {
            _y = value;
         }
      }

      public Player(int x, int y)
      {
         X = x;
         Y = y;
      }
   }

   class Renderer
   {
      public void DrawPlayer(int x, int y, char symbol = '@')
      {
         Console.SetCursorPosition(x, y);
         Console.WriteLine(symbol);
      }
   }
}
